class PayCalculations:
    def __init__(self, caregivers):
        self.caregivers = caregivers
    
    def calculate_weekly_pay(self, caregiver):
        return caregiver.hours * caregiver.pay_rate

    def generate_weekly_report(self):
        report = []
        total_weekly_pay = 0
        for caregiver in self.caregivers:
            weekly_pay = caregiver.get_weekly_pay(caregiver)
            total_weekly_pay += weekly_pay
            report.append({
                'name': caregiver.name,
                'weekly_pay': weekly_pay
            })
        report.append({
            'name': 'Total Weekly Pay',
            'weekly_pay': total_weekly
        })
        return report

    def display_pay_report(self):
        # Display or print pay report
        report = self.generate_pay_report()
        for entry in report:
            print(f"{entry['name']}: ${entry['weekly_pay']:.2f}")
